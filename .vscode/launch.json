  "version": "0.2.0",
  "configurations": [
    {
      "name": "tsnode launch",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
      "args": ["${workspaceFolder}/src/index.ts"],
      "stopOnEntry": false
    },
    {
      "name": "tsnode launch current",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
      "args": ["${file}"]
    }
  ]
}
