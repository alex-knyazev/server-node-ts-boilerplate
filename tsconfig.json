{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./node_modules/pumped-common/"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
